// room script file
function room_AfterFadeIn()
{
  String json_string = "{ \"name\":\"John\", \"age\":30, \"car\":null, \"things\":[ 1, 2, 3 \] }";
  JsonParser* parser = new JsonParser;
  
  int token_count = 8;
  JsonToken* t[] = JsonToken.NewArray(token_count);

  int r = parser.Parse(json_string, t, token_count);

  // now that you have the Tokens, you can use them to parse as you wish!
  if (r < 0) {
    if(r == eJSON_Error_InsuficientTokens) Display("Failed to parse JSON:  Insuficient tokens!\n");
    else if(r == eJSON_Error_InvalidCharacter) Display("Failed to parse JSON:  Invalid character found!\n");
    else if(r == eJSON_Error_Partial) Display("Failed to parse JSON:  JSON string is only partial!\n");
    else Display("Failed to parse JSON:  INVALID ERROR\n");
  }
  if (r < 1 || t[0].type != eJSON_Tok_OBJECT) Display("Object expected\n");

  for(int i=0; i<r  ; i++){
    JsonToken* tok = t[i];
    System.Log(eLogInfo, "%d ; %s ; %d ; %s ; %d ; %d ; %d", 
      i, tok.ToString(json_string), tok.size , tok.TypeAsString,  tok.start ,  tok.end ,  tok.parent );
  }
  
  System.Log(eLogInfo,"JSON Parsing has FINISHED for string\n\n%s", json_string);
  QuitGame(0);
}
